<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="category_library" model="ir.module.category">
        <field name="name">Library</field>
        <field name="description">Grouping for librarians</field>
    </record>

    <record id="group_library_user" model="res.groups">
        <field name="name">Worker</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="category_library"/>
    </record>

    <record id="group_library_administrator" model="res.groups">
        <field name="name">Administrator</field>
        <field name="implied_ids" eval="[(4, ref('group_library_user'))]"/>
        <field name="category_id" ref="category_library"/>
    </record>

</odoo>
