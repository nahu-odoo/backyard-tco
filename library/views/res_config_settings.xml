<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_inherit_library" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block"
                    string="Library"
                    data-string="Library"
                    data-key="library">
                    <h2>Example</h2>
                    <div class="row mt16 o_settings_container" name="library_data_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="library_containe">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Default Amount</span>
                                <div class="text-muted">
                                    Default amount to be charged for penalty per day
                                </div>
                                <div class="text-muted">
                                    <field name="default_penalty" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
