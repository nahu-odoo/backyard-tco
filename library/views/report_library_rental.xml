<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_rental">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure" />
                        <h2>
                            <span t-field="o.name" />
                        </h2>

                        <div id="informations">
                            <strong>Address: </strong>
                            <span t-field="o.contact_address" />
                        </div>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Book</th>
                                    <th>Borrow Date</th>
                                    <th>Return Date</th>
                                    <th>Due</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.rental_ids" t-as="r" t-att-style="'background-color: red;' if r.overdue_fine > 0 else ''">
                                    <td>
                                        <span t-field="r.book" />
                                    </td>
                                    <td>
                                        <span t-field="r.date" />
                                    </td>
                                    <td>
                                        <span t-field="r.due_date" />
                                    </td>
                                    <td>
                                        <span t-field="r.overdue_fine" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_library_rental" model="ir.actions.report">
        <field name="name">Rental</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">library.report_rental</field>
        <field name="report_file">library.report_rental</field>
        <field name="binding_model_id" ref="base.model_res_partner" />
        <field name="binding_type">report</field>
    </record>

</odoo>
